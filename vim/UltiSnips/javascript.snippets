snippet hapi
const Hapi = require('hapi');

const server = new Hapi.Server();
server.connection({ port: ${1:4000} });

server.route({
	method: '${2:GET}',
	path: '/${3}',
	handler: function (request, reply) {

        reply('ok');
    }
});

server.start((err) => {

    if (err) {
        throw err;
    }
    console.log('Server started!');	
});
endsnippet
